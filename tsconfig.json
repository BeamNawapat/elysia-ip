{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2021",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "declaration": true,
    "removeComments": true,
    "types": ["bun-types"]
  },
  "include": ["src/**/*"]
}
